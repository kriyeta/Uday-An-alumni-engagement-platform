<div id="devise_form_container_wrapper">
  <div id="devise_form_container">
    <ul class="list-unstyled">
      <li><h3 class="form-heading">LOG IN</h3></li>
    </ul>
    <table style="border: 3px groove #e76b00; border-radius: 5px;" class="devise-form-table" width="100%">
      <tr>
        <td style="padding: 10px; border-right: 5px inset white;" valign="top">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'devise-form'}) do |f| %>
              <ul style="list-style-type: none;">
                <li>
                  <%= f.label :email %>
                </li>
                <li>
                  <%= f.text_field :email %>
                </li>
                <li><%= f.label :password %> </li>
                <li><%= f.password_field :password %></li>
                <% if devise_mapping.rememberable? -%>
                    <li><%= f.check_box :remember_me %> <%= f.label :remember_me %></li>
                <% end %>
                <li><%= f.submit "Sign in", :style => 'background-color:#e76b00;' %></li>
              </ul>
          <% end %>
          <ul style="list-style-type: none;">
            <li>
              <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                  <%= link_to "Sign up via Email", new_registration_path(resource_name) %><br/>
              <% end -%>
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br/>
              <% end -%>
            </li>
          </ul>
        </td>
        <td style="padding: 20px;" valign="top">
          <%= render 'home_page/pages_without_signin/signin_signup_widget' %>
        </td>
      </tr>
    </table>
  </div>
</div>