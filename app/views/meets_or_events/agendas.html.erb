<div class="section upcoming-events-section">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h3 class="text-warning">
          <i class="fa fa-fw fa-check-square-o"></i>Active Agendas</h3>
      </div>
    </div>
    <%= render 'meets_or_events/agendas_search', {search_message: "Eg. date, status such as open, closed, working, implemented, title, details, comments etc."} %>
    <%= will_paginate @agendas %>
    <% for agenda in @agendas %>
        <div class="row">
          <div class="col-md-12">
            <ul class="media-list">
              <div class="row">
                <div class="col-md-12">
                  <div class="panel panel-info agenda-unit">
                    <div class="panel-heading">
                      <h3 class="panel-title text-muted">
                        <i class="fa fa-fw fa-lg fa-star"></i> <%= agenda.title %>
                        <% if agenda.created_at >= Date.today-7 %>
                            <span class="label label-primary">New</span>
                        <% end %>
                      </h3>
                    </div>
                    <div class="panel-body">
                      <% if agenda.status.include? "Open" %>
                          <span style="color: blue; font-weight: bold;">Status: Open</span>
                      <% end %>
                      <% if agenda.status.include? "Closed" %>
                          <span style="color: red; font-weight: bold;">Status: Closed</span>
                      <% end %>
                      <% if agenda.status.include? "Working" %>
                          <span style="color: forestgreen; font-weight: bold;">Status: Working</span>
                      <% end %>
                      <% if agenda.status.include? "Implemented" %>
                          <span style="color: forestgreen; font-weight: bold;">Status: Implemented</span>
                      <% end %>
                      <h4>Details:</h4>
                      <p>
                        <%= agenda.details %>
                      </p>
                      <hr>
                          <h4>Solutions:</h4>
                      <% if !agenda.solutions.blank? %>
                          <p> <%= agenda.solutions %></p>
                      <% else %>
                          <p> <strong>Not finalized yet.</strong></p>
                      <% end %>
                          <hr>
                      <h4>Comments:</h4>
                      <% for comment in agenda.comments %>
                          <blockquote>
                            <p><%= comment.comment %></p>
                            <footer>
                              <% if !comment.author_id.blank? %>
                                  <%= User.find(author_id).name %>
                              <% else %>
                                  Unknown
                              <% end %>
                            </footer>
                          </blockquote>
                      <% end %>
                      <a href="#">See All<i class="fa fa-lg fa-angle-double-right fa-fw text-muted"></i></a>
                      <hr>
                      <a href="#"><i class="-o fa fa-2x fa-comment fa-fw text-primary"></i><b><%= agenda.comments_count %></b></a>
                      <a href="#"><i class="fa fa-2x fa-fw fa-thumbs-up text-success"></i><b><%= agenda.likes_count %></b></a>
                      <a href="#"><i class="fa fa-2x fa-fw fa-thumbs-down text-danger"></i><b><%= agenda.dislikes_count %></b></a>
                    </div>
                  </div>
                </div>
              </div>
            </ul>
          </div>
        </div>
    <% end %>
  </div>
</div>
